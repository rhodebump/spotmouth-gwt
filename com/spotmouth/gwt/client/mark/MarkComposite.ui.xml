<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:dnd='urn:import:org.vectomatic.dnd'  xmlns:mu='urn:import:gwtupload.client'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:x2='urn:import:com.spotmouth.gwt.client.common'>



    <g:HTMLPanel>

        <div class="tab">




            <div class="content">

                <div >
                    <h1>
                        <span ui:field='locationNameSpan'/>
                    </h1>
                    <h3>
                        <span ui:field='fullAddressSpan'/>
                    </h3>
                    <h2>
                        <span ui:field='phoneNumberSpan'/>
                    </h2>

                </div>


                <label class="msname">
                    <p>Your Mark</p>
                    <g:TextArea ui:field="contentTextArea"/>
                </label>
                <div id="msfile">


                    <fieldset>

                        <div>
                            <!--
                            <span id="ddselect">
                                <input type="file" id="fileselect" multiple="multiple" name="fileselect[]"/>
                                <p>Select File</p>
                            </span>

                            <div id="messages"></div>
                            <div id="filedrag">
                                <p id="ddabout">drop your photo here</p>
                            </div>
                            -->

                            <span id="ddselect">
                                <mu:MultiUploader ui:field="multiUploader"/>

                                <p>Select New Photo</p>
                            </span>
                            <dnd:DropPanel ui:field="dropPanel"/>



                            <g:FlowPanel  ui:field="panelImages"/>
                            <div id="placeholders"><span class="ddplaceholedr"></span>
                                                  <span class="ddplaceholedr"></span>
                                                  <span class="ddplaceholedr"></span></div>

                        </div>


                        <div id="submitbutton">
                            <button type="submit">Upload Files</button>
                        </div>

                    </fieldset>


                </div>
                <label>
                    <p>Secret Key</p>
                    <g:TextBox ui:field="secretKeyTextBox"/>
                </label>
                <label>
                    <p>Add Tags</p>
                    <g:SuggestBox ui:field="tagSearchTextBox"/>          <g:Button addStyleNames="btn_blue" ui:field="addTagButton">Add</g:Button>
                    <p class="msdescription">maximum five tags</p>
                </label>
                <g:FlowPanel ui:field="selectedTagsPanel"/>
                <g:FlowPanel ui:field="suggestionsPanel"/>


                <span class="h_leave_mark">

                    <g:Button addStyleNames="btn_blue"  ui:field="leaveMarkButton">Submit</g:Button>
                    <g:Button ui:field="shareOnFacebookButton">Share on facebook</g:Button>
                </span>



            </div>
        </div>

        </g:HTMLPanel>

    </ui:UiBinder>
