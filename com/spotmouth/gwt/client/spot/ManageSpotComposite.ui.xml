<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'   xmlns:dnd='urn:import:org.vectomatic.dnd'   xmlns:mu='urn:import:gwtupload.client'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:gwt="urn:import:com.google.gwt.user.client.ui">





  <g:HTMLPanel>

      <div id="manage_spot">
      	<div class="content">

      		<div class="ms_photo"> <!-- This block will be used instead "manage photos" page -->
                  <g:SimplePanel ui:field="spotImagePanel"/>
                  <mu:MultiUploader ui:field="multiUploader"/>
      		</div>

      		<div class="ms_right">
      			<h1><g:Anchor ui:field="spotDetailsAnchor"><span ui:field='nameSpan'/></g:Anchor></h1> <!-- This header will be used as "go to this spot" button -->

      			<ul class="ms_func">
      				<li class="ug_item">
      					<img src="css/coupons.png" class="ug_item_inside"/>
                          <g:Anchor ui:field="createCoupon">Create Coupon</g:Anchor>

      				</li>
      				<li class="ug_item">
      					<img src="css/event.png" class="ug_item_inside"/>
                          <g:Anchor ui:field="createEvent">Create Event</g:Anchor>

      				</li>
      				<li class="ug_item">
      					<img src="css/product.png" class="ug_item_inside"/>

                          <g:Anchor ui:field="manageProducts">Manage Products</g:Anchor>
      				</li>
      				<li class="ug_item">
      					<img src="css/mark-spot.png" class="ug_item_inside"/>

                          <g:Anchor ui:field="changeListingInfo">Change Listing Info</g:Anchor>
      				</li>

      			</ul>

      			<ul class="btm-bar">

                      <li><g:Anchor addStyleNames="ms_add_f"  ui:field="addToFavorites" title="Add to favorite"></g:Anchor></li>
                  				<li><g:Anchor addStyleNames="ms_lock" ui:field="lockThisSpot" title="Lock this spot"></g:Anchor></li>
                  				<li><g:Anchor addStyleNames="ms_rem" ui:field="deleteSpotAnchor" title="Delete this spot"></g:Anchor></li>


      			</ul>
      		</div>
      	</div>
      </div>




</g:HTMLPanel>

</ui:UiBinder>
