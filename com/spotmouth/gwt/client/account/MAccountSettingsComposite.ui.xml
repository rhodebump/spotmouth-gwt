<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <div style="display:none">
            <g:Anchor ui:field="removeProfileAnchor" title="Remove Profile">x</g:Anchor>
        </div>

        <div id="content" class="content">

   		<div id="fav" class="profile _page">

   				<ul id="prof-tab-nav" class="_tab_navigation _top">
   					<li class="_active"><button><span class="_icon _login"></span></button></li>
   					<li><button><span class="_icon _menu"></span></button></li>
   					<li><button><span class="_icon _favorite"></span></button></li>
   				</ul>

   				<ul id="prof-tabs" class="_tabs">
   					<li class="_active">
   						<div class="content">
   							<h3>Profile Settings</h3>
   							<div class="_img_wrap">
   								<img src="css/img/mcd.jpg" class="_big"/>
   							</div>



   						</div>
   					</li>
   					<li>
   						<div class="content">
   							<h3>Account Settings</h3>

   								<label>
   									<p>Username</p>

                                       <g:TextBox  ui:field="usernameTextBox"/>
   								</label>
   								<label>
   									<p>Email</p>
                                       <g:TextBox addStyleNames="pcheck" ui:field="emailAddressTextBox"/>
   								</label>
   								<span class="_sep _light"></span>
   								<label>
   									<p>Old Password</p>
                                       <g:TextBox ui:field="oldPasswordTextBox"/>
   								</label>
   								<label>
   									<p>New Password</p>
                                       <g:TextBox ui:field="newPasswordTextBox"/>
   								</label>
   								<span class="_sep _light"></span>
   								<label>
   									<p>SMS Phone Number</p>
                                       <g:TextBox  ui:field="smsPhoneNumberTextBox"/>
   								</label>
   								<span class="_sep _light"></span>
   								<label>

                                       <g:Button addStyleNames="_white _active" ui:field="saveAccountSettingsButton">Save</g:Button>

   								</label>

   						</div>
   					</li>
   					<li>
   						<div class="content" style="margin-bottom: -26px;">



   						</div>
   					</li>
   				</ul>

   		</div>

   	</div>

</g:HTMLPanel>

</ui:UiBinder>

