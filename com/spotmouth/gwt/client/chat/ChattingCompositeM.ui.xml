<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:dnd='urn:import:org.vectomatic.dnd'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >

    <g:HTMLPanel>

       <div style="display:none">
           <dnd:DropPanel ui:field="dropPanel"/>
       </div>

        <div id="content" class="content">

       		<div class="chat _page">

                   <g:FlowPanel addStyleNames="chat_messages" ui:field="chat"/>


       			<div id="send" class="chat_send">

       					<label>
                               <g:TextBox ui:field="input"/>
                               <g:Button addStyleNames="_white _active _inline" ui:field="send">
                               <span class="_icon _send"></span>
                               </g:Button>

       				</label>

       			</div>
       		</div>

       	</div>


</g:HTMLPanel>

</ui:UiBinder>