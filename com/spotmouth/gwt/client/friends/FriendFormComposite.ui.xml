<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'   xmlns:dnd='urn:import:org.vectomatic.dnd'   xmlns:xx='urn:import:gwtupload.client'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
              xmlns:sm="urn:import:com.spotmouth.gwt.client" xmlns:smc="urn:import:com.spotmouth.gwt.client.common" >





  <g:HTMLPanel>

      <div id="friends" class="friends">

      	<div class="f_content">
      		<h3 id="empty" class="f_title f_empty">Dear %User Name%! We have noticed that your Friend List is empty <br/> Invite your friends and have more fun with Spotmouth</h3>

      		<h3 class="f_title">Invite your friends</h3>

      		<div class="f_invite">

      			<label class="f_inp f_inv_name">

                      <smc:TextField ui:field="friendNameTextBox" placeholder="Enter your friend's name"/>
      				<p>Optional</p>
      			</label>

      		<div class="f_inv_sel">

      			<input type="checkbox" id="inv_tgl" tabindex="2"/>
      			<span class="f_inv_sel_tgl">
      				<button class="f_em"><img src="css/inbox.png"/></button>
      				<button class="f_ph"><img src="css/f_phone.png"/></button>
      			</span>

      			<label class="f_inp f_inp_inv_email">

                      <smc:TextField ui:field="emailAddressTextBox" type="email" placeholder="Enter your friend's e-mail"/>
      				<p>Divide e-mails by comma</p>
      			</label>

      			<label class="f_inp f_inp_inv_phone">
                      <!--
      				<input type="text" placeholder="Enter your friend's phone number" required="true" tabindex="3"/>
      				-->
                      <smc:TextField ui:field="smsPhoneNumberBox" tabIndex="3" placeholder="Enter your friend's phone number" />
      				<p>Divide numbers by comma</p>
      			</label>
      		</div>

      			<h3 class="f_s_title">Attach Message<p>optional</p></h3>

                  <g:TextArea ui:field="friendJoinMessageTextArea"/>
      			<g:Button ui:field="inviteFriendButton"/>

      		</div>
      	</div>

      </div>

</g:HTMLPanel>

</ui:UiBinder>
